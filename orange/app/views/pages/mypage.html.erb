<div>マイページ</div><br>
<div>ユーザー名　<%= @user.name %> </div>
<div>学校名　<%= @user.schoolname %> </div>
<div>卒業年度　<%= @user.guraduate %> </div>
<div>emailアドレス　<%= @user.email %> </div>
<div>電話番号　　<%= @user.phone %> </div>
<% if @user.profile %>
	<div>プロフィール　<%= @user.profile %> </div>
<% else %>
	<div>プロフィールを設定してください</div>
<% end %>

<div><%= link_to '編集','/user/edit/profile' %></div><br>

<% @user.uattributes.each do |attribute| %>
	<div>属性: <%= attribute.name %> </div>
	<%= link_to '削除','/delete_attributes/' + attribute.id.to_s %>
<% end %>

<div>参加予定のイベント一覧</div>
<% @eusers.each do |euser| %>
	<div>イベント名: <%= euser.event.name %> </div>
<% end %>
<br>
<div>イベント作成</div>
<%= form_tag "/create_events", method: :post do %>
	<%= label_tag "イベント名" %>
	<%= text_field_tag :name %><br>
	<%= label_tag "内容" %>
	<%= text_area_tag :content %><br>
	<%= label_tag "開始日時" %>
	<%= datetime_select :event, :start_at %><br>
	<%= label_tag "定員" %>
	<%= number_field_tag :number %><br>
	<%= label_tag "属性" %>
	<%= collection_select :eattribute, :name, @attributes, :name, :name %><br>
	<%= submit_tag"作成" %>
<% end %>
<br>

<div>自分の属性の大カテゴリー登録</div>
<%= form_tag "/add_attributes", method: :post do %>
	<%= label_tag "属性" %>
	<%= collection_select :attribute, :name, @attributes, :name, :name %><br>
	<%= submit_tag"追加" %>
<% end %>
<br>
<div><%= link_to 'イベント一覧へ','/user/events' %></div>
<div><%= link_to 'OBOG名簿',"/user/obog" %></div>
<div><%= link_to 'とっぷ','/' %></div></div>
<div><%= link_to 'ログアウト','/signout' %></div>